<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="?attr/screen_background"
    tools:context=".Activity.PrateekSinha">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/screen_background"
        android:hapticFeedbackEnabled="true"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            style="?attr/collapsingToolbarLayoutLargeStyle"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarStyle"
            android:layout_width="match_parent"
            android:id="@+id/ctl_home"
            android:fitsSystemWindows="true"
            app:statusBarScrim="?attr/bar_background"
            app:contentScrim="?attr/bar_background"
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="fade">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:hapticFeedbackEnabled="true"
                android:id="@+id/toolbar_home"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="Prateek Sinha" >

                <ImageView
                    android:id="@+id/aryan_back"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_back_24dp"
                    app:tint="?attr/main_text"
                    />

                <TextView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:background="@drawable/circle_bg"
                    android:text="C"
                    android:textSize="16sp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center"
                    android:gravity="center"
                    android:textColor="?attr/ui_background"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/gsm"
                    android:textColor="?attr/main_text"
                    android:text="#19"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"/>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:paddingHorizontal="8dp"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:overScrollMode="always"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/national_team_cv"
                        app:rippleColor="?attr/ui_background"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                android:src="@drawable/india"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Indian Cricket Team"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:rippleColor="?attr/ui_background"
                        app:cardElevation="0dp"
                        android:id="@+id/ipl_team_cv"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                android:src="@drawable/csk_widget"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chennai Super Kings"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/player_cv"
                        app:rippleColor="?attr/ui_background"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ms_dhoni"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MS Dhoni"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/personality_cv"
                        app:rippleColor="?attr/ui_background"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                android:background="@drawable/balanced"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balanced"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="26dp"
                            android:layout_marginRight="6dp"
                            app:tint="?attr/button_background"
                            android:src="@drawable/ic_baseline_info_24"
                            android:layout_height="26dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Information"
                            android:gravity="center"
                            android:fontFamily="@font/gsm"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/cardView3"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/batting"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/born">

                            <com.takwolf.android.aspectratiolayout.AspectRatioLayout
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                app:arl_heightRatio="1"
                                app:arl_widthRatio="1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:id="@+id/prateek_pic"
                                    android:src="@drawable/default_pic" />

                            </com.takwolf.android.aspectratiolayout.AspectRatioLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/born"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Born: "
                            android:textColor="?attr/main_text"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/cardView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/born_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bhagalpur, Bihar"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="?attr/secondary_text"
                            app:layout_constraintStart_toEndOf="@+id/born" />

                        <TextView
                            android:id="@+id/birthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthdate: "
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:textColor="?attr/main_text"
                            app:layout_constraintTop_toBottomOf="@id/born"
                            app:layout_constraintStart_toEndOf="@+id/cardView3" />

                        <TextView
                            android:id="@+id/birthdate_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="June 19, 2005"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/born_des"
                            android:textColor="?attr/secondary_text"
                            app:layout_constraintStart_toEndOf="@+id/birthdate" />

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nickname: "
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:textColor="?attr/main_text"
                            app:layout_constraintTop_toBottomOf="@id/birthdate"
                            app:layout_constraintStart_toEndOf="@+id/cardView3" />

                        <TextView
                            android:id="@+id/nickname_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shammo, Paratha"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/birthdate_des"
                            android:textColor="?attr/secondary_text"
                            app:layout_constraintStart_toEndOf="@+id/nickname" />

                        <TextView
                            android:id="@+id/bowling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bowling Style: "
                            android:layout_marginLeft="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:textColor="?attr/main_text"
                            app:layout_constraintTop_toBottomOf="@id/nickname"
                            app:layout_constraintStart_toEndOf="@+id/cardView3" />

                        <TextView
                            android:id="@+id/bowling_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Right Arm Fast"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/nickname_des"
                            android:textColor="?attr/secondary_text"
                            app:layout_constraintStart_toEndOf="@+id/bowling" />

                        <TextView
                            android:id="@+id/batting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="2dp"
                            android:text="Batting Style: "
                            android:textColor="?attr/main_text"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/cardView3"
                            app:layout_constraintTop_toBottomOf="@id/bowling" />

                        <TextView
                            android:id="@+id/batting_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Right Hand Bat"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/bowling_des"
                            android:textColor="?attr/secondary_text"
                            app:layout_constraintStart_toEndOf="@+id/batting" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="24dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/circle_bg"
                                android:padding="4dp"
                                android:src="@drawable/ic_baseline_bar_chart_24"
                                app:tint="?attr/ui_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/gsm"
                                android:gravity="center"
                                android:text="Statistics"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Matches"
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/gsm"
                                android:gravity="right"
                                android:id="@+id/match"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress1"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginBottom="12dp"
                            app:indicatorColor="?attr/button_background"
                            app:trackColor="?attr/screen_background"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Runs"
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/gsm"
                                android:gravity="right"
                                android:id="@+id/runs"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress2"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginBottom="12dp"
                            app:indicatorColor="?attr/button_background"
                            app:trackColor="?attr/screen_background"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Wickets"
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/gsm"
                                android:gravity="right"
                                android:id="@+id/wicket"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress3"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginBottom="12dp"
                            app:indicatorColor="?attr/button_background"
                            app:trackColor="?attr/screen_background"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Average"
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/gsm"
                                android:gravity="right"
                                android:id="@+id/average"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress4"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginBottom="8dp"
                            app:indicatorColor="?attr/button_background"
                            app:trackColor="?attr/screen_background"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintBottom_toTopOf="@id/constraintLayout5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circle_progress"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                app:indicatorColor="?attr/button_background"
                                app:indicatorSize="50dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:trackColor="?attr/screen_background"
                                app:trackCornerRadius="3dp"
                                app:trackThickness="6dp" />

                            <TextView
                                android:id="@+id/strike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gsm"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/circle_progress"
                                app:layout_constraintEnd_toEndOf="@id/circle_progress"
                                app:layout_constraintStart_toStartOf="@+id/circle_progress"
                                app:layout_constraintTop_toTopOf="@+id/circle_progress" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="Strike Rate"
                                android:textColor="?attr/secondary_text"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/circle_progress" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circle_progress1"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                app:indicatorColor="?attr/button_background"
                                app:indicatorSize="50dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:trackColor="?attr/screen_background"
                                app:trackCornerRadius="3dp"
                                app:trackThickness="6dp" />

                            <TextView
                                android:id="@+id/economy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gsm"
                                android:textColor="?attr/main_text"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/circle_progress1"
                                app:layout_constraintEnd_toEndOf="@id/circle_progress1"
                                app:layout_constraintStart_toStartOf="@+id/circle_progress1"
                                app:layout_constraintTop_toTopOf="@+id/circle_progress1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="Economy"
                                android:textColor="?attr/secondary_text"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/circle_progress1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/certificate_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:rippleColor="?attr/bar_background"
                app:strokeColor="?attr/ui_background"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circle_bg"
                            android:padding="4dp"
                            android:src="@drawable/ic_baseline_star_24"
                            app:tint="?attr/ui_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Certificates"
                            android:gravity="center"
                            android:fontFamily="@font/gsm"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                app:tint="?attr/button_background"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="120dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                android:layout_marginRight="8dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="154dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/pushkar_c1"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                android:layout_marginRight="8dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="154dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/prateek_c1"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="154dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/aryan_c2"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_marginRight="8dp"
                            app:tint="?attr/ui_background"
                            android:padding="4dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/ic_baseline_person_24"
                            android:layout_height="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Profiles"
                            android:gravity="center"
                            android:fontFamily="@font/gsm"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="?attr/secondary_text"
                        android:layout_marginBottom="12dp"
                        android:text="Hi! I'm Prateek Sinha. You can message me on my Telegram. You can check out and follow my Instagram."
                        />

                    <Button
                        android:id="@+id/social1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Telegram"
                        app:rippleColor="?attr/bar_ui"
                        android:textColor="?attr/ui_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/social2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow me on Instagram"
                        app:rippleColor="?attr/bar_ui"
                        android:layout_marginTop="4dp"
                        android:textColor="?attr/ui_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>