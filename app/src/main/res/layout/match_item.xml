<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/team_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/ui_background"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondary_text"
                android:textSize="14sp"
                android:id="@+id/series_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="?attr/bar_ui"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/series_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/team1_image"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="?attr/ui_background"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/team1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?attr/screen_background"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/team1_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/team1_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?attr/screen_background"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="22dp"
                android:id="@+id/top_team1_iv"
                android:layout_height="22dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/default_pic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView4"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top_team1_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top_team1_iv"
                app:layout_constraintLeft_toRightOf="@id/top_team1_iv"
                app:layout_constraintBottom_toBottomOf="@id/top_team1_iv" />

            <TextView
                android:id="@+id/top_team1_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="22dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top_team1_iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/top_team1_iv"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="22dp"
                android:id="@+id/top2_team1_iv"
                android:layout_height="22dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/default_pic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/top_team1_iv"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top2_team1_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top2_team1_iv"
                app:layout_constraintLeft_toRightOf="@id/top2_team1_iv"
                app:layout_constraintBottom_toBottomOf="@id/top2_team1_iv" />

            <TextView
                android:id="@+id/top2_team1_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="22dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top2_team1_iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/top2_team1_iv"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="?attr/bar_ui"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top2_team1_iv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/team2_image"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="?attr/ui_background"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/team2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?attr/screen_background"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/team2_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/team2_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?attr/screen_background"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="22dp"
                android:id="@+id/top_team2_iv"
                android:layout_height="22dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/default_pic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView5"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top_team2_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top_team2_iv"
                app:layout_constraintLeft_toRightOf="@id/top_team2_iv"
                app:layout_constraintBottom_toBottomOf="@id/top_team2_iv" />

            <TextView
                android:id="@+id/top_team2_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="22dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top_team2_iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/top_team2_iv"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="22dp"
                android:id="@+id/top2_team2_iv"
                android:layout_height="22dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/default_pic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/top_team2_iv"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top2_team2_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top2_team2_iv"
                app:layout_constraintLeft_toRightOf="@id/top2_team2_iv"
                app:layout_constraintBottom_toBottomOf="@id/top2_team2_iv" />

            <TextView
                android:id="@+id/top2_team2_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="22dp"
                android:textColor="?attr/main_text"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/top2_team2_iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/top2_team2_iv"
                />

            <TextView
                android:id="@+id/result_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="?attr/button_background"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top2_team2_iv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_click"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="28dp"
        app:strokeColor="#00ffffff"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#00ffffff"
        app:rippleColor="?attr/bar_background"
        app:layout_constraintTop_toTopOf="@id/team_card"
        app:layout_constraintLeft_toLeftOf="@id/team_card"
        app:layout_constraintRight_toRightOf="@id/team_card"
        app:layout_constraintBottom_toBottomOf="@+id/team_card" />

</androidx.constraintlayout.widget.ConstraintLayout>